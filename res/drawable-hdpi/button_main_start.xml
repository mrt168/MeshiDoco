<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ボタンが押されてない時 -->
    <item android:state_pressed="false">
        <!-- ボタンの形状 -->
        <shape android:shape="rectangle">
            <!-- ボタンの色 -->
            <solid android:color="@color/meshiDoco_main_button_color"/>
            <!-- ボタンの枠線 -->
            <stroke android:width="1dp" android:color="@color/meshiDoco_main_button_color"/>
            <!-- ボタンの角の半径 -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- ボタンが押された時 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/meshiDoco_main_button_color_pushed"/>
            <stroke android:width="1dp" android:color="@color/meshiDoco_main_button_color_pushed"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>